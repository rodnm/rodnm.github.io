---
import MobileMenu from '../components/MobileMenu';
import Navigation from '../components/Navigation';
import ScrollProgress from '../components/ui/ScrollProgress';
import LanguageDetector from '../components/ui/LanguageDetector';
import ReloadPrompt from '../components/ui/ReloadPrompt';
import ThemeToggle from '../components/ui/ThemeToggle';
import { Languages } from 'lucide-react';
import SEO from '../components/SEO.astro';
import { navigation } from '../config';
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
    locale?: 'es' | 'en';
}

const {
    title,
    description = 'Portafolio Profesional de Rodrigo Norabuena - Economista y Data Scientist',
    locale = 'es',
} = Astro.props;

const navItems = navigation[locale];
const isEs = locale === 'es';
const toggleLink = isEs ? '/en' : '/';
const toggleText = isEs ? 'EN' : 'ES';
---

<!doctype html>
<html lang={locale}>
    <head>
        <SEO title={title} description={description} locale={locale} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Preconnect to external domains -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                // eslint-disable-next-line
                dataLayer.push(arguments);
            }
            gtag('js', new Date());

            gtag('config', 'G-XXXXXXXXXX');
        </script>

        <script is:inline>
            const theme = (() => {
                if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            })();

            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
            window.localStorage.setItem('theme', theme);
        </script>
    </head>
    <body
        class="bg-white dark:bg-[#1a1a1a] text-gray-900 dark:text-gray-100 transition-colors duration-300"
    >
        <!-- Splash Screen -->
        <div
            id="splash-screen"
            class="fixed inset-0 bg-white dark:bg-[#1a1a1a] z-[200] flex items-center justify-center transition-opacity duration-500"
        >
            <div class="relative">
                <div
                    class="w-16 h-16 border-4 border-[var(--color-primary)] border-t-transparent rounded-full animate-spin"
                >
                </div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-xl font-bold text-[var(--color-secondary)]">RN</span>
                </div>
            </div>
        </div>

        <script is:inline>
            window.addEventListener('load', () => {
                const splash = document.getElementById('splash-screen');
                if (splash) {
                    setTimeout(() => {
                        splash.style.opacity = '0';
                        setTimeout(() => splash.remove(), 500);
                    }, 500);
                }
            });
        </script>

        <ReloadPrompt client:only="react" />

        <a
            href="#main-content"
            class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-6 focus:py-3 focus:bg-[var(--color-primary)] focus:text-white focus:rounded-lg focus:shadow-lg"
        >
            Saltar al contenido principal
        </a>

        <LanguageDetector client:load />
        <ScrollProgress client:load />

        <header
            class="fixed w-full top-0 z-50 bg-white/80 dark:bg-[#1a1a1a]/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800"
        >
            <nav class="w-full px-4 md:px-8 py-4 flex justify-between items-center">
                <a
                    href="#"
                    class="text-2xl font-bold text-[var(--color-primary)] dark:text-[var(--color-secondary)]"
                >
                    Portafolio
                </a>
                <div class="flex items-center gap-6">
                    <Navigation client:load items={navItems} />

                    <!-- Theme & Language Toggles -->
                    <div
                        class="flex items-center gap-3 pl-6 border-l border-gray-200 dark:border-gray-700"
                    >
                        <ThemeToggle client:load />
                        <a
                            href={toggleLink}
                            class="px-3 py-1.5 text-sm bg-gray-100 dark:bg-gray-800 rounded-full font-bold hover:bg-[var(--color-primary)] hover:text-white dark:hover:bg-[var(--color-secondary)] transition-colors flex items-center gap-1.5"
                            aria-label={isEs ? 'Switch to English' : 'Cambiar a EspaÃ±ol'}
                        >
                            <Languages className="w-3.5 h-3.5" />
                            {toggleText}
                        </a>
                    </div>

                    <MobileMenu client:load items={navItems} />
                </div>
            </nav>
        </header>
        <main id="main-content" class="pt-20">
            <slot />
        </main>
        <footer class="bg-gray-50 dark:bg-gray-900 py-8 mt-20">
            <div class="max-w-6xl mx-auto px-4 text-center text-gray-600 dark:text-gray-400">
                <p>
                    &copy; {new Date().getFullYear()} Portafolio Profesional. Creado con Astro y Tailwind.
                </p>
            </div>
        </footer>
    </body>
</html>
