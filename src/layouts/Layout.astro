---
import MobileMenu from "../components/MobileMenu";
import Navigation from "../components/Navigation";
import ScrollProgress from "../components/ScrollProgress";
import SEO from "../components/SEO.astro";
import { navigation } from "../config";
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    locale?: "es" | "en";
}

const {
    title,
    description = "Portafolio Profesional de Rodrigo Norabuena - Economista y Data Scientist",
    locale = "es",
} = Astro.props;
const navItems = navigation[locale];
---

<!doctype html>
<html lang={locale}>
    <head>
        <SEO title={title} description={description} locale={locale} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Preconnect to external domains -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <script is:inline>
            const theme = (() => {
                if (
                    typeof localStorage !== "undefined" &&
                    localStorage.getItem("theme")
                ) {
                    return localStorage.getItem("theme");
                }
                if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
                    return "dark";
                }
                return "light";
            })();

            if (theme === "dark") {
                document.documentElement.classList.add("dark");
            } else {
                document.documentElement.classList.remove("dark");
            }

            window.localStorage.setItem("theme", theme);
        </script>
    </head>
    <body
        class="bg-white dark:bg-[#1a1a1a] text-gray-900 dark:text-gray-100 transition-colors duration-300"
    >
        <ScrollProgress client:load />
        <header
            class="fixed w-full top-0 z-50 bg-white/80 dark:bg-[#1a1a1a]/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800"
        >
            <nav
                class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center"
            >
                <a
                    href="#"
                    class="text-2xl font-bold text-[var(--color-primary)] dark:text-[var(--color-secondary)]"
                >
                    Portafolio
                </a>

                <div class="flex items-center gap-6">
                    <Navigation client:load items={navItems} />
                    <MobileMenu client:load items={navItems} />
                </div>
            </nav>
        </header>

        <main class="pt-20">
            <slot />
        </main>

        <footer class="bg-gray-50 dark:bg-gray-900 py-8 mt-20">
            <div
                class="max-w-6xl mx-auto px-4 text-center text-gray-600 dark:text-gray-400"
            >
                <p>
                    &copy; {new Date().getFullYear()} Portafolio Profesional. Creado
                    con Astro y Tailwind.
                </p>
            </div>
        </footer>
    </body>
</html>
