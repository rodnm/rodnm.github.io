---
import ThemeToggle from '../components/ThemeToggle';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio Profesional" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
					return 'dark';
				}
				return 'light';
			})();
		
			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		
			window.localStorage.setItem('theme', theme);
		</script>
	</head>
	<body class="bg-white dark:bg-[#1a1a1a] text-gray-900 dark:text-gray-100 transition-colors duration-300">
		<header class="fixed w-full top-0 z-50 bg-white/80 dark:bg-[#1a1a1a]/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800">
			<nav class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
				<a href="#" class="text-2xl font-bold text-[var(--color-primary)] dark:text-[var(--color-secondary)]">
					Portafolio
				</a>
				
				<div class="flex items-center gap-6">
					<ul class="hidden md:flex gap-6 font-medium">
						<li><a href="#about" class="hover:text-[var(--color-secondary)] transition-colors">Sobre m√≠</a></li>
						<li><a href="#experience" class="hover:text-[var(--color-secondary)] transition-colors">Experiencia</a></li>
						<li><a href="#projects" class="hover:text-[var(--color-secondary)] transition-colors">Proyectos</a></li>
						<li><a href="#contact" class="hover:text-[var(--color-secondary)] transition-colors">Contacto</a></li>
					</ul>
					<ThemeToggle client:load />
				</div>
			</nav>
		</header>

		<main class="pt-20">
			<slot />
		</main>

		<footer class="bg-gray-50 dark:bg-gray-900 py-8 mt-20">
			<div class="max-w-6xl mx-auto px-4 text-center text-gray-600 dark:text-gray-400">
				<p>&copy; {new Date().getFullYear()} Portafolio Profesional. Creado con Astro y Tailwind.</p>
			</div>
		</footer>
	</body>
</html>
