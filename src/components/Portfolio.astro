---
import Layout from '../layouts/Layout.astro';
import type { PortfolioData } from '../config';

// Sections
import Hero from './sections/Hero.astro';
import About from './sections/About.astro';
import Experience from './sections/Experience.astro';
import Education from './sections/Education.astro';
import Skills from './sections/Skills.astro';
import Projects from './sections/Projects.astro';
import Contact from './sections/Contact.astro';

interface Props {
    data: PortfolioData;
    currentLocale: 'es' | 'en';
}

const { data, currentLocale } = Astro.props;
const { personalInfo, experiences, education, skills, projects } = data;

const isEs = currentLocale === 'es';
---

<Layout
    title={`Portafolio de ${personalInfo.name}`}
    description={personalInfo.description}
    locale={currentLocale}
>
    <Hero personalInfo={personalInfo} isEs={isEs} />
    <About personalInfo={personalInfo} isEs={isEs} />
    <Experience experiences={experiences} isEs={isEs} />
    <Education education={education} isEs={isEs} />
    <Skills skills={skills} isEs={isEs} />
    <Projects projects={projects} isEs={isEs} />
    <Contact personalInfo={personalInfo} isEs={isEs} />
</Layout>
