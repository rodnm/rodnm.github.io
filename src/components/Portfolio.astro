---
import Layout from "../layouts/Layout.astro";
import ThemeToggle from "./ThemeToggle";
import ScrollToTop from "./ScrollToTop";
import ScrollReveal from "./ScrollReveal";
import ParallaxBackground from "./ParallaxBackground";
import ContactForm from "./ContactForm";
import ProjectFilters from "./ProjectFilters";
import { Image } from "astro:assets";
import {
    Briefcase,
    Code,
    Mail,
    Github,
    Linkedin,
    ExternalLink,
    GraduationCap,
    Cpu,
    Languages,
} from "lucide-react";
import type { PortfolioData } from "../config";

interface Props {
    data: PortfolioData;
    currentLocale: "es" | "en";
}

const { data, currentLocale } = Astro.props;
const { personalInfo, experiences, education, skills, projects } = data;

const isEs = currentLocale === "es";
const toggleLink = isEs ? "/en" : "/";
const toggleText = isEs ? "EN" : "ES";
const cvText = isEs ? "Descargar CV" : "Download CV";
const contactText = isEs ? "Contáctame" : "Contact Me";
const aboutTitle = isEs ? "Sobre Mí" : "About Me";
const experienceTitle = isEs ? "Experiencia" : "Experience";
const educationTitle = isEs ? "Educación" : "Education";
const skillsTitle = isEs ? "Conocimiento Técnico" : "Technical Skills";
const projectsTitle = isEs ? "Proyectos" : "Projects";
const contactTitle = isEs ? "Contacto" : "Contact";
const contactDesc = isEs
    ? "¿Tienes un proyecto en mente o simplemente quieres saludar? ¡Envíame un mensaje!"
    : "Have a project in mind or just want to say hi? Send me a message!";
const viewProjectText = isEs ? "Ver Proyecto" : "View Project";
---

<Layout
    title={`Portafolio de ${personalInfo.name}`}
    description={personalInfo.description}
    locale={currentLocale}
>
    <!-- Language & Theme Toggle (Fixed) -->
    <div class="fixed top-4 right-4 z-50 flex items-center gap-3">
        <ThemeToggle client:load />
        <a
            href={toggleLink}
            class="px-4 py-2 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-full shadow-lg border border-gray-200 dark:border-gray-700 text-gray-800 dark:text-white font-bold hover:scale-105 transition-transform flex items-center gap-2"
        >
            <Languages class="w-4 h-4" />
            {toggleText}
        </a>
    </div>

    <!-- Hero Section -->
    <ScrollReveal client:load animation="fade" duration={1000}>
        <section
            class="min-h-[90vh] flex items-center justify-center px-4 relative overflow-hidden"
        >
            <ParallaxBackground client:load />

            <div class="max-w-4xl mx-auto text-center">
                <h1
                    class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] dark:from-[var(--color-accent)] dark:to-[var(--color-secondary)]"
                >
                    {isEs ? "Hola, soy" : "Hi, I'm"}
                    {personalInfo.name}
                </h1>
                <p
                    class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto"
                >
                    {personalInfo.description}
                </p>
                <div class="flex flex-col md:flex-row gap-4 justify-center">
                    <a
                        href="#contact"
                        class="px-8 py-3 bg-[var(--color-primary)] text-white rounded-lg hover:bg-opacity-90 transition-all shadow-lg hover:shadow-xl dark:bg-[var(--color-accent)] dark:text-gray-900 font-semibold"
                    >
                        {contactText}
                    </a>
                    <a
                        href={personalInfo.cv}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="px-8 py-3 border-2 border-[var(--color-primary)] text-[var(--color-primary)] rounded-lg hover:bg-[var(--color-primary)] hover:text-white transition-all dark:border-[var(--color-accent)] dark:text-[var(--color-accent)] dark:hover:bg-[var(--color-accent)] dark:hover:text-gray-900 font-semibold"
                    >
                        {cvText}
                    </a>
                </div>
            </div>
        </section>
    </ScrollReveal>

    <!-- About Section -->
    <ScrollReveal client:load animation="slide-up">
        <section id="about" class="py-20 px-4 bg-gray-50 dark:bg-white/5">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <Code className="w-8 h-8 text-[var(--color-secondary)]" />
                    {aboutTitle}
                </h2>
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div
                        class="aspect-square rounded-full overflow-hidden bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-secondary)] p-1"
                    >
                        <div
                            class="w-full h-full bg-gray-200 dark:bg-gray-800 rounded-full flex items-center justify-center overflow-hidden"
                        >
                            <Image
                                src={personalInfo.profileImage}
                                alt={personalInfo.name}
                                class="w-full h-full object-cover"
                                width={400}
                                height={400}
                                loading="eager"
                            />
                        </div>
                    </div>
                    <div>
                        {
                            personalInfo.about.map((paragraph) => (
                                <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
                                    {paragraph}
                                </p>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>
    </ScrollReveal>

    <!-- Experience Section -->
    <ScrollReveal client:load animation="slide-up">
        <section id="experience" class="py-20 px-4">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <Briefcase
                        className="w-8 h-8 text-[var(--color-secondary)]"
                    />
                    {experienceTitle}
                </h2>
                <div class="space-y-8">
                    {
                        experiences.map((exp) => (
                            <div class="relative pl-8 border-l-2 border-[var(--color-secondary)]">
                                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-[var(--color-secondary)]" />
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                    {exp.title}
                                </h3>
                                <span class="text-[var(--color-primary)] dark:text-[var(--color-accent)] font-medium">
                                    {exp.company} | {exp.period}
                                </span>
                                <p class="mt-2 text-gray-600 dark:text-gray-300">
                                    {exp.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </ScrollReveal>

    <!-- Education Section -->
    <ScrollReveal client:load animation="slide-up">
        <section id="education" class="py-20 px-4 bg-gray-50 dark:bg-white/5">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <GraduationCap
                        className="w-8 h-8 text-[var(--color-secondary)]"
                    />
                    {educationTitle}
                </h2>
                <div class="space-y-8">
                    {
                        education.map((edu) => (
                            <div class="flex flex-col md:flex-row gap-4 md:gap-8 items-start">
                                <div class="md:w-1/4">
                                    <span class="text-[var(--color-primary)] dark:text-[var(--color-accent)] font-bold">
                                        {edu.period}
                                    </span>
                                </div>
                                <div class="md:w-3/4">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                        {edu.institution}
                                    </h3>
                                    <p class="text-lg text-gray-700 dark:text-gray-200">
                                        {edu.degree}
                                    </p>
                                    {edu.description && (
                                        <p class="mt-2 text-gray-600 dark:text-gray-300">
                                            {edu.description}
                                        </p>
                                    )}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </ScrollReveal>

    <!-- Skills Section -->
    <ScrollReveal client:load animation="slide-up">
        <section id="skills" class="py-20 px-4">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <Cpu className="w-8 h-8 text-[var(--color-secondary)]" />
                    {skillsTitle}
                </h2>
                <div class="grid md:grid-cols-3 gap-8">
                    {
                        skills.map((category) => (
                            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
                                <h3 class="text-xl font-bold mb-4 text-[var(--color-primary)] dark:text-[var(--color-accent)]">
                                    {category.category}
                                </h3>
                                <div class="flex flex-wrap gap-2">
                                    {category.skills.map((skill) => (
                                        <span class="px-3 py-1 text-sm rounded-full bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                                            {skill}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </ScrollReveal>

    <!-- Projects Section -->
    <ScrollReveal client:load animation="slide-up">
        <section id="projects" class="py-20 px-4 bg-gray-50 dark:bg-white/5">
            <div class="max-w-6xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <ExternalLink
                        className="w-8 h-8 text-[var(--color-secondary)]"
                    />
                    {projectsTitle}
                </h2>

                <ProjectFilters
                    client:load
                    projects={projects}
                    labels={{
                        all: isEs ? "Todos" : "All",
                        viewProject: viewProjectText,
                    }}
                />
            </div>
        </section>
    </ScrollReveal>

    <!-- Contact Section -->
    <ScrollReveal client:load animation="fade">
        <section id="contact" class="py-20 px-4">
            <div class="max-w-4xl mx-auto">
                <h2
                    class="text-3xl font-bold mb-12 text-center flex items-center justify-center gap-3"
                >
                    <Mail class="w-8 h-8 text-[var(--color-secondary)]" />
                    {contactTitle}
                </h2>

                <p
                    success:
                    isEs
                    ?
                    "¡Mensaje
                    enviado
                    con
                    éxito!"
                    :
                    "Message
                    sent
                    successfully!",
                    error:
                    isEs
                    ?
                    "Hubo
                    un
                    error
                    al
                    enviar
                    el
                    mensaje."
                    :
                    "There
                    was
                    an
                    error
                    sending
                    the
                    message.",
                    }}
                >
                </p>

                <div class="flex justify-center gap-6 mt-12">
                    <a
                        href={personalInfo.contact.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="p-4 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-[var(--color-primary)] hover:text-white dark:hover:bg-[var(--color-accent)] dark:hover:text-gray-900 transition-colors"
                        aria-label="GitHub profile"
                    >
                        <Github className="w-6 h-6" />
                    </a>
                    <a
                        href={personalInfo.contact.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="p-4 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-[#0077b5] hover:text-white transition-colors"
                        aria-label="LinkedIn profile"
                    >
                        <Linkedin className="w-6 h-6" />
                    </a>
                    <a
                        href={`mailto:${personalInfo.contact.email}`}
                        class="p-4 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-[var(--color-secondary)] hover:text-white transition-colors"
                        aria-label="Email contact"
                    >
                        <Mail className="w-6 h-6" />
                    </a>
                </div>
            </div>
        </section>
    </ScrollReveal>

    <ScrollToTop client:load />
</Layout>
